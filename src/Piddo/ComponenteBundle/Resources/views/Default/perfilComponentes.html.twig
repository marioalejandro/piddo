{% extends '::plantillaGerencia.html.twig' %}
 
{% block title %}
    Perfil Componentes
{% endblock %}
{% block id 'piezas' %}
 
{% block article %}
    <h1>
    <a href="{{ path('admin_marcas')}}">Motores</a> > 
    <a href="{{ path('admin_modelos',{'marca': serie.modelo.marca.slug })}}">{{serie.modelo.marca.nombre}}</a> > 
    <a href="{{ path('admin_series',{'marca': serie.modelo.marca.slug, 'modelo' : serie.modelo.slug })}}">{{serie.modelo.nombre}}</a> >
    {{serie.nombre}} >
    Componentes
    </h1>
    <section id="formulario_marca">
        <h4>Agregar un Coleccion de Piezas</h4>
	<form action="{{ path('componente_perfil',{'serie': serie.id })}}" method="post" {{ form_enctype(form) }}>
        
        {#{ form_start(form) }#}
            {{ form_errors(form) }}
       <h3>Modificar</h3>
            {{form_row(form.nombre)}}
       
            
       <h3>Componentes</h3>
        <ul class="piezas">
            {# itera sobre cada etiqueta existente y reproduce la fila#}
            {% for p in form.perfilComponentes %}
                <li>{{form_widget(p.grupoComponente)}}{{ form_widget(p.componente) }} {{ form_widget(p.maximo) }}</li>
            {% endfor %}
        </ul>
           
            {{ form_rest(form) }}
            {#{ form_end(form) }#}
            <input class="boton" type="submit" value="Guardar" />
            </form>


    </section>

{% endblock %}
 
